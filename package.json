{
    "name": "portfolio",
    "main": "index.*",
    "author": "Jonathan PAIN-CHAMMING'S",
    "scripts": {
        "start": "sass -w sass:css",
        "build": "postcss css/style.css -u autoprefixer -r --no-map",
        "normalize": "cp node_modules/normalize.css/normalize.css sass/_normalize.scss",
        "clean": "test -d sass && rm -r sass ; test -f package.json && rm package.json ; test -f package-lock.json && rm package-lock.json",
        "commit": "git commit -m \"Mise en production - $(date +'%Y-%m-%d')\"",
        "test": "echo $(date + '%Y-%m-%d')",
        "prod": "git checkout prod && git merge -s ours main && npm run clean && npm run commit && git push && git ftp push && git checkout main"
    },
    "dependencies": {
        "autoprefixer": "^10.4.14",
        "normalize.css": "^8.0.1",
        "sass": "^1.60.0"
    },
    "devDependencies": {
        "postcss": "^8.4.21",
        "postcss-cli": "^10.1.0"
    }
}